<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Concerter.Views.EventListView">
    <Grid ColumnDefinitions="* *" RowDefinitions="* 8*" Margin="15">

        <Button Content="Предыдущий"
                Grid.Column="0"
                Grid.Row="0"
                HorizontalAlignment="Left" />

        <TextBlock Text="{Binding SelectedDate, StringFormat={}{0:dd.MM.yyyy}}"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Grid.Row="0"
                   HorizontalAlignment="Center" />

        <Button Content="Следующий"
                Grid.Column="1"
                Grid.Row="0"
                HorizontalAlignment="Right" />

        <ListBox Items="{Binding Events}"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Grid.Row="1" />
    </Grid>
</UserControl>