<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Concerter.ViewModels"
             mc:Ignorable="d"
             x:Class="Concerter.Views.MyProfileView"
             Width="600" Height="300" Margin="50">
    <Design.DataContext>
        <vm:MyProfileViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="TextBox">
            <Setter Property="Width" Value="150" />
        </Style>
        <Style Selector="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="* * * *" ColumnDefinitions="* * *" Margin="20">

        <TextBlock Text="{Binding Email, StringFormat={}Эл. почта: {0}}"
                   Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" />

        <TextBlock IsVisible="{Binding !EditMode}"
                   Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0} {1} {2}">
                    <Binding Path="LastName" />
                    <Binding Path="FirstName" />
                    <Binding Path="MiddleName" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

        <StackPanel Grid.Column="0" Grid.Row="1" Spacing="10"
                    Grid.ColumnSpan="3" Orientation="Horizontal"
                    IsVisible="{Binding EditMode}">
            <TextBox Text="{Binding LastName}"
                     Watermark="Фамилия" />
            <TextBox Text="{Binding FirstName}"
                     Watermark="Имя" />
            <TextBox Text="{Binding MiddleName}"
                     Watermark="Отчество" />
        </StackPanel>

        <TextBlock Text="{Binding Password}"
                   Grid.Column="0" Grid.Row="2"
                   HorizontalAlignment="Right" />

        <Button Command="{Binding ChangePassword}"
                Content="Сменить пароль" HorizontalAlignment="Right"
                Grid.Column="1" Grid.Row="2"
                Margin="20 0" />

        <Button Command="{Binding SwitchEditMode}"
                Content="{Binding EditOrSaveText}"
                Grid.Column="2" Grid.Row="3" />

        <Button Command="{Binding Back}"
                Content="Назад" HorizontalAlignment="Right"
                Grid.Column="1" Grid.Row="3"
                Margin="20 0" />

    </Grid>
</UserControl>